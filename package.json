{
    "name": "openproject-time-logger",
    "version": "1.0.0",
    "description": "Desktop app for OpenProject time logging with JSON work logs",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
        "electron:build": "vite build && electron-builder",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "lucide-react": "^0.294.0",
        "clsx": "^2.0.0",
        "tailwind-merge": "^2.1.0",
        "class-variance-authority": "^0.7.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.55.0",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "vite": "^5.0.8",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.openproject.timelogger",
        "productName": "OpenProject Time Logger",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "shared/**/*"
        ],
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
